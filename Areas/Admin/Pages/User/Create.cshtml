@page
@model CreateUserModel

@{
    ViewData["Title"] = "Create User";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    <span></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Role" class="control-label"></label>
                    <small class="d-block text-info">Leave blank for normal user</small>
                    @* @Html.DropDownList("Input.Role", (SelectList)ViewBag.Roles, "Please choose", new { @class = "form-control" }) *@
                    @Html.DropDownList("Input.Role", (SelectList)ViewBag.Roles, "", new { @class = "form-control" })
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a asp-page="./Index">Back to list</a>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
