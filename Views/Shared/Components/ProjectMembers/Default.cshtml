@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<IssueTracker.Data.ApplicationUser>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <a asp-area="Admin" asp-page="/User/Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area="Admin" asp-page="/User/Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-area="Admin" asp-page="/User/Delete" asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<div>
    <button type="button" class="btn btn-link p-0 align-baseline" data-bs-toggle="modal" data-bs-target="#addMemberModal">Add Member</button> |
</div>
