@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<SelectListItem>

<form method="post" id="add-swimlanes-form">
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="addSwimlanesModalLabel">Add swimlane</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div aclass="form-group">
            <label for="NewSwimlaneName" class="control-label" required aria-required="true">Swimlane Name</label>
            <input id="NewSwimlaneName" class="form-control" type="text" name="SwimlaneName"/>

            <label for="ProjectId" class="control-label">Select Project</label>
            <select id="ProjectId" class ="form-control" asp-items="@Model" name="ProjectId"></select>
        </div>        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" type="submit" data-bs-dismiss="modal">Save changes</button>
    </div>    
</form>